@model IEnumerable<fifaAgapov23.Models.Player>

@{
    ViewData["Title"] = "Каталог футболистов";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Пол</th>
            <th>Дата Рождения</th>
            <th>Команда</th>
            <th>Страна</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.FirstName</td>
                <td>@player.LastName</td>
                <td>@player.Gender</td>
                <td>@player.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@player.Team?.Name</td>
                <td>@player.Country</td>
                <td>
                    <a href="@Url.Action("Edit", "Player", new { id = player.Id })">Редактировать</a> |
                    <a href="@Url.Action("Delete", "Player", new { id = player.Id })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Player")" class="btn btn-primary">Добавить Футболиста</a>
